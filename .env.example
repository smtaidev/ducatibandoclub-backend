# Server Configuration
NODE_ENV=development
PORT=8601

# Database
DATABASE_URL="mongodb://localhost:27017/madara"

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_ACCESS_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=30d
JWT_RESET_PASS_SECRET=your_jwt_reset_pass_secret_here
JWT_RESET_PASS_EXPIRES_IN=15m
JWT_STORE_ADDRESS_EXPIRES_IN=15m

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# OTP Configuration
OTP_ACCESS_EXPIRES_IN=5

# AWS S3 Configuration
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=your_s3_region
S3_BUCKET_NAME=your_s3_bucket_name

# Email Configuration
EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
CONTACT_MAIL_ADDRESS=contact@madara.com

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
